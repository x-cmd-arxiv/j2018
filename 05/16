r beam-alignment design.\n","versions":[{"version":"v1","created":"Wed, 16 May 2018 01:38:13 GMT"},{"version":"v2","created":"Tue, 9 Oct 2018 00:10:44 GMT"},{"version":"v3","created":"Sun, 2 Dec 2018 22:42:05 GMT"},{"version":"v4","created":"Fri, 7 Dec 2018 22:10:38 GMT"}],"update_date":"2018-12-11"}
