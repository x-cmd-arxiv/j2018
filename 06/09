 approaches.\n","versions":[{"version":"v1","created":"Sat, 9 Jun 2018 13:28:50 GMT"},{"version":"v2","created":"Fri, 14 Sep 2018 01:19:30 GMT"}],"update_date":"2018-09-17"}
