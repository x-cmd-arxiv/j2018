\\subset G^\\vee$.\n","versions":[{"version":"v1","created":"Mon, 11 Jun 2018 16:50:29 GMT"},{"version":"v2","created":"Wed, 15 May 2019 19:24:25 GMT"}],"update_date":"2019-05-17"}
