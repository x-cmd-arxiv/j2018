\nsimulation studies and a real data analysis.\n","versions":[{"version":"v1","created":"Wed, 19 Dec 2018 19:49:31 GMT"},{"version":"v2","created":"Sun, 30 May 2021 08:08:23 GMT"},{"version":"v3","created":"Wed, 16 Mar 2022 05:34:50 GMT"},{"version":"v4","created":"Tue, 14 Jun 2022 06:21:41 GMT"},{"version":"v5","created":"Sat, 10 Sep 2022 15:12:15 GMT"}],"update_date":"2022-09-13"}
